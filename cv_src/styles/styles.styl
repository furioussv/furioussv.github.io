base-color = #3d6cb0
accent-color = #e6e6e6

.title-block
    position relative
    &::after
        content ''
        position absolute
        display block
        width 100%
        height 5px
        top 50%
        background-color base-color
        z-index -10
    .wrapper
        position relative
        display inline-block
        background-color white
        z-index 10
    .icon
        display inline-block
        margin-right 7px
        width 70px
        height 70px
        border 1px solid base-color
        border-radius 50%
        background-color base-color
        box-shadow 0 0 0 2px white inset
        &::before
            content ''
            display block
            width 47px
            height 54px
            background url('../images/sprite.png') no-repeat
            margin 15px auto
        &-profile::before
            background-position-x -235px
        &-contact::before
            background-position-x -188px
        &-skills::before
            background-position-x -141px
        &-education::before
            background-position-x -47px
        &-experience::before
            background-position-x -94px
        &-software::before
            background-position-x 0
    h2.title
        display inline-block
        text-transform uppercase
        color base-color
        font-family 'MyriadProBold'
        font-size 41px
        margin 0
        padding-top 8px
        vertical-align top

.container
    width 1240px
    margin 0 auto
    @media screen and (max-width: 1240px)
        width 680px

.left-column
    float left
    width 420px
    margin-left 44px

.right-column
    float right
    width 650px
    margin-right 46px

.left-column,
.right-column
    @media screen and (max-width: 1240px)
        float none
        margin 0 auto

.logo
    text-align center
    margin-top 80px
    margin-left 30px
    .portrait
        display inline-block
        width 230px
        height 230px
        border-radius 50%
        border 1px solid base-color
        background-color base-color
        box-shadow 0 0 0 13px white inset
    h1
        font-family 'MyriadProBold'
        font-size 62px
        color black
        text-transform uppercase
        margin 0
        margin-top -20px
    h2
        font-family 'MyriadProLightSemiExt'
        font-size 53px
        font-weight normal
        color black
        text-transform uppercase
        margin 0
        margin-top 21px
    h3
        font-family 'MyriadProBold'
        font-size 24px
        color black
        text-transform uppercase
        margin 0

.profile
    margin-top 76px
    margin-left 10px
    p
       font-family 'MyriadProRegular'
       font-size 15px
       margin 0
       margin-top 8px
       padding-right 10px
       word-spacing 1px
       line-height 19px

.contact
    margin-top 40px
    margin-left 10px
    table
        margin 0
        padding 0
        margin-left -29px
        border-spacing 27px
        tr
            td:first-child
                font-family 'MyriadProBold'
                font-size 20px
                color base-color
                text-transform uppercase
            td:last-child
                font-family 'MyriadProRegular'
                font-size 20px
                padding-left 15px

.skills
    margin-top 20px
    margin-bottom 89px
    margin-left 8px
    > span
        display block
        text-align center
        font-family 'MyriadProRegular'
        font-size 26px
        text-transform uppercase
        margin-left 7px
        margin-top 17px
        span.dot
            display inline-block
            width 17px
            height 17px
            border-radius 50%
            background-color accent-color
            margin-right 10px
            &.active
                background-color base-color
            &:first-child
                margin-left 5px
            &:nth-child(4n),
            &:nth-child(11)
                margin-right 11px
            &:nth-child(5n)
                margin-right 12px
        &:nth-of-type(2)
            margin-top 12px
            .wrap
                margin-top 1px
        &:nth-of-type(3)
            margin-top 13px
            .wrap
                margin-top -1px
        &:last-of-type
            margin-top 13px
            .wrap
                margin-top -3px

.education
    margin-top 68px
    .icon
        margin-right 16px
    .title
        padding-top 7px
    .wrap
        position relative
        margin-left 50px
        margin-top 19px
        &-item
            display inline-block
            font-size 16px
            font-family 'MyriadProRegular'
            span
                &:first-of-type
                    font-family 'MyriadProBold'
                    font-size 26px
                    color base-color
                    text-transform uppercase
                &:nth-of-type(2)
                    display inline-block
                    margin-left 13px
                    font-size 26px
                &:nth-of-type(3)
                    font-size 26px
                    text-transform uppercase
                &:last-of-type
                    display inline-block
                    margin-top 6px
                    margin-left 3px
        &::before
            content ''
            position absolute
            top 9px
            left -39px
            display inline-block
            width 20px
            height 20px
            border-radius 50%
            background-color black
            margin-right 21px
        &:nth-child(3)
            margin-top 10px
        &:nth-child(4)
            margin-top 8px
        &:nth-child(5)
            margin-top 7px

.experience
    margin-top 52px
    .icon
        width 72px
        height 72px
    .title
        margin-left 7px
        margin-top 2px
    .wrap
        position relative
        margin-left 50px
        margin-top 34px
        &-item
            display inline-block
            font-size 16px
            font-family 'MyriadProRegular'
            span
                &:first-of-type
                    font-family 'MyriadProBold'
                    font-size 26px
                    text-transform uppercase
                &:nth-of-type(2)
                    display inline-block
                    margin-left 13px
                    font-size 26px
                &:nth-of-type(3)
                    font-size 26px
                    text-transform uppercase
                &:last-of-type
                    display inline-block
                    margin-top 6px
                    margin-left 3px
        &::before
            content ''
            position absolute
            top 9px
            left -39px
            display inline-block
            width 20px
            height 20px
            border-radius 50%
            background-color black
            margin-right 21px
        &:nth-child(3)
            margin-top 8px
        &:nth-child(4)
            margin-top 10px

.software
    margin-top 50px
    .title
        margin-left 9px
        margin-top 3px
    .progress
        &-item
            display inline-block
            width 277px
            margin-left 7px
            margin-top 21px
            .progress-title
                margin-left -1px
            &:nth-child(2n+3)
                margin-left 64px
                .progress-title
                    margin-left 2px
            &:nth-child(4),
            &:nth-child(5)
                margin-top 35px
            &:nth-child(6),
            &:nth-child(7)
                margin-top 32px
            .progressbar
                position relative
                width 277px
                height 22px
                background-color #e6e6e6
                .progress
                    position absolute
                    left 0
                    top 0
                    height 100%
                    background-color base-color

        &-title
            font-family 'MyriadProRegular'
            font-size 26px
            text-transform uppercase

