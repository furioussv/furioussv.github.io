base-color = #3d6cb0
accent-color = #e6e6e6

.container
    width 1240px
    margin 0 auto
    @media screen and (max-width: 1240px)
        width 680px

.left-column
    float left
    width 410px
    margin-left 56px

.right-column
    float right
    width 630px
    margin-right 66px

.clearfix::after
    content ''
    display table
    clear both

.left-column,
.right-column
    @media screen and (max-width: 1240px)
        float none
        margin 0 auto
        width 630px

.title-block
    position relative
    &::after
        content ''
        position absolute
        display block
        width 100%
        height 5px
        top 50%
        background-color base-color
        z-index -10
    .title-wrapper
        position relative
        display inline-block
        background-color white
        z-index 10
    .title
        display inline-block
        text-transform uppercase
        color base-color
        font-family 'MyriadProBold'
        font-size 41px
        margin 0
        padding-top 8px
        vertical-align top
    .icon-title
        display inline-block
        margin-right 7px
        width 70px
        height 70px
        border 1px solid base-color
        border-radius 50%
        background-color base-color
        box-shadow 0 0 0 2px white inset
        &::before
            content ''
            display block
            width 47px
            height 54px
            background url('../images/sprite.png') no-repeat
            margin 15px auto
    .icon-profile::before
        background-position-x -235px
    .icon-contact::before
        background-position-x -188px
    .icon-skills::before
        background-position-x -141px
    .icon-education::before
        background-position-x -47px
    .icon-experience::before
        background-position-x -94px
    .icon-software::before
        background-position-x 0


.logo
    text-align center
    margin-top 80px
    margin-left 15px
    .portrait
        display inline-block
        width 230px
        height 230px
        border-radius 50%
        border 1px solid base-color
        background-color base-color
        box-shadow 0 0 0 13px white inset
        &-surname,
        &-name,
        &-profession
            color black
            text-transform uppercase
            margin 0
        &-surname
            font-family 'MyriadProBold'
            font-size 62px
            margin-top -20px
        &-name
            font-family 'MyriadProLightSemiExt'
            font-size 53px
            font-weight normal
            margin-top 22px
        &-profession
            font-family 'MyriadProBold'
            font-size 24px
            margin-top -1px

.profile
    margin-top 76px
    margin-left -2px
    .title
        margin-right 8px
    .title-block::after
        transform translateY(-5px)
    &-vita
       font-family 'MyriadProRegular'
       font-size 15px
       margin 0
       margin-top 8px
       padding-right 10px
       word-spacing 1px
       line-height 19px

.contact
    margin-top 40px
    margin-left -2px
    .title
        margin-right 8px
    .title-block::after
        transform translateY(-5px)
    .contact-table
        margin 0
        padding 0
        margin-left -29px
        border-spacing 27px
    .table-topic
        font-family 'MyriadProBold'
        font-size 20px
        color base-color
        text-transform uppercase
    .table-value
        font-family 'MyriadProRegular'
        font-size 20px
        padding-left 15px

.skills
    margin-top 20px
    margin-bottom 89px
    margin-left -4px
    .title
        margin-right 13px
    .title-block
        margin-right 2px
        &::after
            transform translateY(-6px)
    .skill
        display block
        text-align center
        font-family 'MyriadProRegular'
        font-size 26px
        text-transform uppercase
        margin-left 6px
        .dot
            display inline-block
            width 17px
            height 17px
            border-radius 50%
            background-color accent-color
            margin-right 10px
            &.active
                background-color base-color
            &:first-child
                margin-left 5px
            &:nth-child(4n),
            &:nth-child(11)
                margin-right 11px
            &:nth-child(5n)
                margin-right 12px
        &-creative
            margin-top 16px
            .dots-wrapper
                margin-top 1px
        &-teamwork
            margin-top 13px
        &-innovate
            margin-top 12px
        &-communication
            margin-top 13px
            .dots-wrapper
                margin-top -3px

.education,
.experience
    &-item
        display inline-block
        font-size 16px
        font-family 'MyriadProRegular'
        .head
            font-family 'MyriadProBold'
            font-size 26px
            color base-color
            text-transform uppercase
        .date
            display inline-block
            margin-left 13px
            font-size 26px
        .name
            font-size 26px
            text-transform uppercase
        .explanation
            display inline-block
            margin-top 6px
            margin-left 3px
        &::before
            content ''
            position absolute
            top 9px
            left -39px
            display inline-block
            width 20px
            height 20px
            border-radius 50%
            background-color black
            margin-right 21px


.education
    margin-top 68px
    .icon-title
        margin-right 16px
    .title
        padding-top 7px
        margin-right 9px
    .title-block::after
        transform translateY(-6px)
    &-wrapper
        position relative
        margin-left 50px
        margin-top 19px
        &:nth-child(3)
            margin-top 10px
        &:nth-child(4)
            margin-top 8px
        &:nth-child(5)
            margin-top 7px

.experience
    margin-top 52px
    .icon-title
        width 72px
        height 72px
    .head
        color black
    .title
        margin-left 7px
        margin-top 2px
        margin-right 2px
        &:nth-child(3)
            margin-top 8px
        &:nth-child(4)
            margin-top 10px
    .title-block::after
        transform translateY(-5px)
    &-wrapper
        position relative
        margin-left 50px
        margin-top 34px
        &:nth-child(3)
            margin-top 8px
        &:nth-child(4)
            margin-top 10px

.software
    margin-top 50px
    .title
        margin-left 9px
        margin-top 3px
        margin-right 23px
    .title-block::after
        transform translateY(-2px)
    .progress
        &-item
            display inline-block
            width 277px
            margin-left 6px
            margin-top 21px
            .progress-title
                margin-left -1px
            .progressbar
                position relative
                width 277px
                height 22px
                background-color #e6e6e6
                .progress-value
                    position absolute
                    left 0
                    top 0
                    height 100%
                    background-color base-color
        &-photoshop .progressbar
            margin-top 13px
        &-dreamweaver
            margin-left 64px
            .progress-title
                margin-left 2px
            .progressbar
                margin-top 13px
        &-illustrator .progressbar
            margin-top 11px
        &-after
            margin-left 64px
            .progress-title
                margin-left 2px
            .progressbar
                margin-top 11px
        &-indesign .progressbar
            margin-top 9px
        &-aftereffects
            margin-left 64px
            .progress-title
                margin-left 2px
            .progressbar
                margin-top 11px
        &-html
            margin-left 64px
            .progress-title
                margin-left 2px
            .progressbar
                margin-top 9px
        &-title
            font-family 'MyriadProRegular'
            font-size 26px
            text-transform uppercase

